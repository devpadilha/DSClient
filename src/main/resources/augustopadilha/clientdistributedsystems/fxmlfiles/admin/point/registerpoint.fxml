<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="create_client_container"
            stylesheets="@../../../style/registerpoint.css" xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="augustopadilha.clientdistributedsystems.controllers.admin.point.RegisterPointController">
   <VBox layoutX="14.0" prefHeight="20.0" prefWidth="20.0" AnchorPane.leftAnchor="30.0"/>
   <Text layoutX="24.0" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="title_text"
         text="Registar novo ponto" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="20.0"/>
