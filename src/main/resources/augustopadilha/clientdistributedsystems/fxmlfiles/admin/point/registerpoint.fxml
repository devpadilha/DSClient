         prefWidth="600.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="55.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nome"/>
      <TextField fx:id="name_field"/>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Obs"/>
      <TextArea fx:id="obs_area" prefHeight="160.0" prefWidth="250.0" wrapText="true"/>
      <Button fx:id="register_button" mnemonicParsing="false" text="Registrar">
         <VBox.margin>
            <Insets top="30.0"/>
         </VBox.margin>
      </Button>
      <Label fx:id="error_label" styleClass="error_lbl" textFill="RED"/>
   </VBox>
</AnchorPane>
